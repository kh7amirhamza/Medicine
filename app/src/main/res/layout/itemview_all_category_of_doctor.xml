<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    style="@style/Widget.App.CardView.Rounded"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bas_cardview1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_home">
                <ImageView
                    android:id="@+id/bas_imgv_speaciali_icon"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/otp_verification"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/bas_txtv_speaciali_name"
            android:layout_toRightOf="@+id/bas_cardview1"
            android:layout_toLeftOf="@id/iv_bas_arrow"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Cardiologist"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />
        <ImageView
            android:id="@+id/iv_bas_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_black_24dp"/>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#B0B0B8"
             android:layout_below="@id/bas_cardview1"
             android:layout_marginTop="5dp"/>


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>