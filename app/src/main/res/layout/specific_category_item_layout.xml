<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/varification_otp_btn_back"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/specific_category_profileID"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/doctor_a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/specificCaategoryNameID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Dr. A. B. M. Riaz Kawser"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/specific_category_profileID"
        app:layout_constraintTop_toTopOf="@+id/specific_category_profileID" />

    <TextView
        android:id="@+id/specificCaategoryID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:inputType="textMultiLine"
        android:text="Cardiology,Medicine"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/specificCaategoryNameID"
        app:layout_constraintTop_toBottomOf="@+id/specificCaategoryNameID" />

    <TextView
        android:id="@+id/specificCaategoryEducationID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:inputType="textMultiLine"
        android:text="MBBS,BCS,MD(Cardiology)"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/specificCaategoryNameID"
        app:layout_constraintTop_toBottomOf="@+id/specificCaategoryID" />

    <TextView
        android:id="@+id/specificCaategoryDesignationID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:inputType="textMultiLine"
        android:text="Assistan Professor"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/specificCaategoryNameID"
        app:layout_constraintTop_toBottomOf="@+id/specificCaategoryEducationID" />

    <TextView
        android:id="@+id/specificCaategoryInstituteID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:inputType="textMultiLine"
        android:text="National Institiute of Cardiovascular Deseases"
        android:textSize="13sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/specificCaategoryNameID"
        app:layout_constraintTop_toBottomOf="@+id/specificCaategoryDesignationID" />

    <TextView
        android:id="@+id/specificCaategoryConsultantfeeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Consultation Fee - 700"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/specificCaategoryNameID"
        app:layout_constraintTop_toBottomOf="@+id/specificCaategoryInstituteID" />
</androidx.constraintlayout.widget.ConstraintLayout>